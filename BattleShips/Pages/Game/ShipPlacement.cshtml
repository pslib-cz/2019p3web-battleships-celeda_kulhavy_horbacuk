@page
@model BattleShips.ShipPlacementModel
@{
    ViewData["Title"] = "ShipPlacement";
}

<div class="container">
    <main role="main" class="pb-3">
        <header class="game-header">
            <h1>Umístění lodí</h1>
        </header>
        @foreach (BattleShips.ViewModel.GameBoardModel gameBoard in Model.GameBoardModels)
        {
            <partial name="_GameBoard" model="gameBoard" />
        }

        <div class="info-box mt-2">
            <p>
                <a class="btn btn-success" asp-page-handler="Start">Konec umisťování lodí</a>
            </p>
        </div>
    </main>
</div>

